@model ProjectStatusUpdateViewModel

@{
    ViewData["Title"] = "Project Status";
}

<div class="modal-header">
    <h3>Update Status</h3>
    <button type="button" class="btn-close" data-close="true"></button>
</div>
<form method="post" asp-action="StatusProject" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="ProjectStatusId"></label>
        <select asp-for="ProjectStatusId" asp-items="Model.ProjectStatusList" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Update Status</button>
</form>