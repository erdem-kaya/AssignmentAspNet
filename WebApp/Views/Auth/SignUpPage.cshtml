@model SignUpViewModel

@{
    Layout = "_Layout_CenterScreen";
    ViewData["Title"] = Model.Title;
}

<section id="login">
    <form asp-controller="Auth" asp-action="SignUpPage" method="post" novalidate>
        <h1>@ViewData["Title"]</h1>

        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" />
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" />
        </div>

        <div class="form-group">
            <div class="form-signin-details">
                <div class="form-remember-me">
                    <input class="form-checkbox" type="checkbox" />
                    <span>I accept Terms and Conditions</span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-submit">Log In</button>
        </div>

        <div class="form-footer">
            <span>Already have an account?</span>
            <a asp-control="Auth" asp-action="SignInPage">Login</a>
        </div>

    </form>
</section>