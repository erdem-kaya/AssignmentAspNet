
@model SignInViewModel

@{
    Layout = "_Layout_CenterScreen";
    ViewData["Title"] = "Login";
}

<section id="login">
    <form asp-controller="Auth" asp-action="SignInPage" method="post" enctype="multipart/form-data" novalidate >
        <h1>@ViewData["Title"]</h1>

        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessages))
        {
            <div class="alert-notification error">
                @ViewBag?.ErrorMessages
            </div>
        }

        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="field-group">
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="field-group">
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-signin-details">
                <div class="form-remember-me">
                    <input class="form-checkbox" type="checkbox" />
                    <span>Remember Me</span>
                </div>
                <a>Forgot Password?</a>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-submit">Log In</button>
        </div>


        <div class="form-footer">
            <span>Don't have an account?</span>
            <a asp-control ="Auth" asp-action="SignUpPage">Sign Up</a>
        </div>

    </form>
</section>

